
<div id="<%= dom_id category %>">
  <% if category.image.present? %>
    <div class="card-image">
      <figure class="image is-4by3">
        <%= image_tag category.image%>
      </figure>
    </div>
  <%end%>
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

</div>
